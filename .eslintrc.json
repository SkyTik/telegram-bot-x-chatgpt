{
  "settings": {
      "import/resolver": {
          "node": {
              "paths": [
                  "app/"
              ],
              "extensions": [".ts"]
          }
      }
  },
  "parser": "@typescript-eslint/parser",
  "env": {
      "node": true,
      "es2021": true
  },
  "plugins": [
      "prettier"
  ],
  "extends": [
      "eslint:recommended",
      "airbnb-base",
      "prettier",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "rules": {
      "consistent-return": "off",
      "no-await-in-loop": "off",
      "no-restricted-syntax": "off",
      "no-return-await": "off",
      "import/extensions": "off",
      "import/prefer-default-export": "off",
      "prettier/prettier": [
          "error",
          {
              "printWidth": 110,
              "singleQuote": true,
              "trailingComma": "none"
          }
      ]
  }
}